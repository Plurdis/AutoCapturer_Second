                                        </Grid.RowDefinitions>

                                        <TextBlock Text="자동 저장" Margin="0,12" TextAlignment="Center" Grid.Row="0" FontSize="14" VerticalAlignment="Center"/>
                                        <Button Margin="20,8" Grid.Column="1" Grid.Row="0" Content="(사용하지 않음)"/>
                                        <Button Margin="20,8" Grid.Column="2" Grid.Row="0" Content="F2 Key"/>

                                        <TextBlock Text="전체 캡쳐" Margin="0,12" TextAlignment="Center" Grid.Row="1" FontSize="14" VerticalAlignment="Center"/>
                                        <Button Margin="20,8" Grid.Column="1" Grid.Row="1" Content="(사용하지 않음)"/>
                                        <Button Margin="20,8" Grid.Column="2" Grid.Row="1" Content="F3 Key"/>

                                        <TextBlock Text="선택 캡쳐" Margin="0,12" TextAlignment="Center" Grid.Row="2" FontSize="14" VerticalAlignment="Center"/>
                                        <Button Margin="20,8" Grid.Column="1" Grid.Row="2" Content="(사용하지 않음)"/>
