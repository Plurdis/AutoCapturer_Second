                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Button x:Name="UsrAddBtn" Grid.Column="0" Content="사용자 추가" Click="PtnAddBtn_Click"/>
                                        <Button x:Name="UsrRemBtn" Grid.Column="2" Content="사용자 삭제" Click="PtnRemBtn_Click"/>
                                    </Grid>
                                </Grid>
                                <TextBlock Text="사용자 전환" Margin="0,36,0,0" FontSize="14"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ListView x:Name="UserLV" Height="122" Margin="0,12,0,0" ScrollViewer.CanContentScroll="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionChanged="listView_SelectionChanged">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="{x:Type ListBoxItem}">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                            <ContentPresenter/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <UserControls:UserItem x:Name="pi" Content="기본 저장" UserImage="/AutoCapturer;component/Resources/Icons/AuCaOn.png"  />
                                        <UserControls:UserItem x:Name="pi2" Content="강의용 캡처" UserImage="/AutoCapturer;component/Resources/Icons/ImgSound.png" />
                                    </ListView>
                                </Grid>
                                <TextBlock Text="개인 설정 저장" Margin="0,36,0,0"  FontSize="14"/>
                                <Grid Margin="0,12,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="130"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock TextTrimming="CharacterEllipsis" FontSize="15" Margin="5"><Run Text="사용자의 설정을 불러옵니다. 이때 기존 설정되어 있었던 설정들은"/><LineBreak/><Run Text="모두 덮어씌워지니 설정 내보내기로 미리 저장해두시기 바랍니다."/></TextBlock>
                                    <Button Content="설정 불러오기" FontSize="15" Grid.Column="1" Margin="5"/>
                                    <TextBlock TextTrimming="CharacterEllipsis" FontSize="15" Margin="5" Grid.Row="1"><Run Text="현재 설정을 파일로 내보냅니다. 파일로 내보내진 설정은"/><LineBreak/><Run Text="설정 불러오기를 통해서 다시 불러와 사용할 수 있습니다."/></TextBlock>
                                    <Button Content="설정 내보내기" FontSize="15" Grid.Row="2" Grid.Column="1" Margin="5"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
